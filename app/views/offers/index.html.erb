<h1> Rent The Fit! </h1>
<p><%= link_to "My bookings", bookings_path %></p>


<div class="cards">
<% @offers.each do |offer| %>
<div class="card">
<div class="card-img">
<img class="img-size" src="https://media-photos.depop.com/b1/18397671/1458707411_32634faa1e8a412fa94d3e5ad5abda8a/P0.jpg">
</div>
<div class="card-text">
<ul>
  <p><%= offer.title %></p>
  <p><%= offer.description %></p>
  <p>$<%= offer.price %></p>
  <p><%= offer.size %></p>
</ul>
</div>
</div>
 <% end %>
