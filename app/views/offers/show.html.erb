
<div class="booking-offer-flex">
<div class="offer-img-container">
<%= cl_image_tag (@offer.photo.key).to_s, height: 500, width: 500, crop: :fill %>
</div>
<div class="offer-text-show-container">
<h2 class="offer-text"><%= @offer.title %></h2>
<div class="flex-card-booking">
<p>Price</p>
<p class="offer-card-text">$<%= @offer.price%></p>
</div>
<div class="flex-card-booking">
<p>Size</p>
 <p class="offer-card-text"><%= @offer.size%></p>
</div>
<div class="flex-card-booking">
<p>Category</p>
 <p class="offer-card-text"><%= @offer.category%></p>
</div>
<p class="offer-text-description"><%= @offer.description %></p>
</div>
<div class="offer-buttons-container">
<div>
<%= link_to new_offer_booking_path(@offer.id) do %>
<button class="add-button-1">Rent</button>
<% end %>
</div>
<div>
<button class="add-button-2">Add to cart</button>
</div>
</div>
</div>
