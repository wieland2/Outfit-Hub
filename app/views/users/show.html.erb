<div class="container-flex-div">
  <div class="user-card">
    <div class="user-information-div">
      <%= link_to user_path(@user)do %>
      <%= cl_image_tag (@user.photo.key).to_s, height: 250, width:  250, crop: :fill, :radius => "max", :gravity => "face" %>
      <% end %>
      <div class="user-card-details-text">
         <p>@<%= @user.username %></p>
        <div class="class-user-text">
          <p>Age</p>
          <p><%= @user.age %></p>
        </div>
        <div class="class-user-text">
          <p>Location</p>
          <p><%= @user.city %></p>
        </div>

        <div>
          <% if policy(@user).edit? %>
            <%= link_to edit_user_path(@user) do %>
            <button class="add-button-1">Edit</button>
            <% end %>
          <% end %>


        </div>
      </div>

    </div>
  </div>
  <div class="user-offers-grid-1">
    <% @user.offers.each do |offer| %>
    <div class="user-offers-container-card">
      <div class="offer-image-profile-card">
        <%= link_to offer_path(offer) do %>
        <%= cl_image_tag (offer.photo.key).to_s, height: 250, width: 300, crop: :fill, :effect=>"improve" %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

</div>
